<Window x:Class="GameOfLife.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife.View.Windows"
        xmlns:controls="clr-namespace:GameOfLife.View.Controls"
        mc:Ignorable="d"
        Title="The Game Of Life" Width="960" Height="540" ResizeMode="CanResize">
    
    <Grid Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <controls:CellUniversePanel Grid.Column="0"/>
        <controls:ControlsPanel Grid.Column="1"/>
    </Grid>
</Window>
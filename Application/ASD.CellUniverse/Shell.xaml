<Window x:Class="ASD.CellUniverse.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:ASD.CellUniverse.Controls;assembly=ASD.CellUniverse.Controls"
        xmlns:vm="clr-namespace:ASD.CellUniverse.ViewModels"
        xmlns:app="clr-namespace:ASD.CellUniverse.Infrastructure.Extensions;assembly=ASD.CellUniverse.Infrastructure"
        Title="{app:Settings ShellTitle, Mode=OneWay}"
        WindowState="{app:Settings ShellState}"
        Width="{app:Settings ShellWidth}"
        Height="{app:Settings ShellHeight}"
        Left="{app:Settings ShellLeft}"
        Top="{app:Settings ShellTop}">
    <Window.DataContext>
        <vm:ShellViewModel/>
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <Grid
            DockPanel.Dock="Right"
            MinWidth="{StaticResource RightPanelMinWidth}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0">
                <ComboBox
                    ItemsSource="{Binding GenerationAlgorithms}"
                    SelectedIndex="{Binding GenerationAlgorithmSelectedIndex}"
                    Margin="{StaticResource UpControlsMargin}"/>
                <Grid
                    Margin="{StaticResource UpControlsMargin}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Text="FPS: "/>
                    <Slider
                        Grid.Column="1"
                        Minimum="{Binding Generator.MinFPS}"
                        Maximum="{Binding Generator.MaxFPS}"
                        Value="{Binding Generator.FPS}"
                        Ticks="{Binding Generator.FPSCollection}"
                        IsSnapToTickEnabled="True"                        
                        AutoToolTipPlacement="BottomRight"/>
                </Grid>                
            </StackPanel>
            <StackPanel
                Grid.Row="1">
                <Button
                    Content="{Binding Controller.PlayPauseResume}"
                    Command="{Binding Controller.PlayPauseResume}"/>
                <Button
                    Content="{Binding Controller.StopReset}"
                    Command="{Binding Controller.StopReset}"/>
            </StackPanel>
        </Grid>
        <Border
            DockPanel.Dock="Left"
            Background="Black">
            <c:MatrixLED
                IntencitySource="{Binding IntencityData}"
                Foreground="{StaticResource RainbowCellsBrush}"/>
        </Border>
    </DockPanel>
</Window>
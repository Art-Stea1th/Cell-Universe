<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Empty -->
    <SolidColorBrush x:Key="Transparent" Color="Transparent"/>

    <!--GreyScale-->
    <SolidColorBrush x:Key="TrueBlack"  Color="#000000"/>
    <SolidColorBrush x:Key="DeepGray"   Color="#1A1A1A"/>
    <SolidColorBrush x:Key="DimGray"    Color="#262626"/>
    <SolidColorBrush x:Key="DarkGray"   Color="#444444"/>
    <SolidColorBrush x:Key="Gray"       Color="#505050"/>
    <SolidColorBrush x:Key="LightGray"  Color="#929292"/>
    <SolidColorBrush x:Key="White"      Color="#F0F0F0"/>
    <SolidColorBrush x:Key="TrueWhite"  Color="#FFFFFF"/>

    <!--Red  Shades-->
    <SolidColorBrush x:Key="DarkRed"    Color="#45050A"/>
    <SolidColorBrush x:Key="DimRed"     Color="#920B16"/>
    <SolidColorBrush x:Key="Red"        Color="#E81123"/>    
    <SolidColorBrush x:Key="WhiteRose"  Color="#F1707A"/>

    <!--Blue Shades-->
    <SolidColorBrush x:Key="DodgerBlue" Color="#1883D7"/>    

</ResourceDictionary>
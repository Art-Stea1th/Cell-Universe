<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    

    <Style x:Key="BasicFontStyle" TargetType="Control">
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontStyle" Value="Normal"/>
    </Style>

    <Style x:Key="NormalFontStyle" TargetType="Control" BasedOn="{StaticResource BasicFontStyle}">
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>        
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style x:Key="BigFontStyle" TargetType="Control" BasedOn="{StaticResource BasicFontStyle}">
        <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
        <Setter Property="FontWeight" Value="UltraLight"/>
        <Setter Property="FontSize" Value="24"/>
    </Style>
</ResourceDictionary>